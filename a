#include <iostream>
#include "stackmahasiswa.h"
using namespace std;

int main() {
    StackMahasiswa SM;

    createStack(SM);
    cout << "Program Stack Mahasiswa Dimulai..." << endl;

    Push(SM, {"Venti",     "11111", 75.7, 82.1, 65.5});
    Push(SM, {"Xiao",      "22222", 87.4, 88.9, 81.9});
    Push(SM, {"Kazuha",    "33333", 92.3, 88.8, 82.4});
    Push(SM, {"Wanderer",  "44444", 95.5, 85.5, 90.5});
    Push(SM, {"Lynette",   "55555", 77.7, 65.4, 79.9});
    Push(SM, {"Chasca",    "66666", 99.9, 93.6, 87.3});

    cout << "\nData Awal:";
    View(SM);

    cout << "\nMelakukan Pop...";
    Pop(SM);

    cout << "\nSetelah Pop:";
    View(SM);

    cout << "\nUpdate Posisi ke-3:";
    Update(SM, 3);

    cout << "\nSetelah Update:";
    View(SM);

    cout << "\nSearching Nilai Akhir:";
    SearchNilaiAkhir(SM, 85.5, 95.5);

    cout << "\nNilai Akhir Tertinggi:";
    MaxNilaiAkhir(SM);

    return 0;
}
